<h2>ユーザー情報変更</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "ニックネーム" %><br />
    <%= f.text_field :nickname, autocomplete: "Nickname" %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "県" %><br />
    <%= f.collection_select(:region_id, Region.all, :id, :name, {}) %>
  </div>

  <div class="field">
    <%= f.label "市" %><br />
    <%= f.text_field :city, autocomplete: "City" %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>

